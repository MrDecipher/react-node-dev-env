root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = crlf

[*cs]
indent_style = tab
indent_size = 4

[*html]
indent_size = 2

[*java]
indent_style = tab
indent_size = 4

[*js]
trim_trailing_whitespace = true

[*scss]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*md]
insert_final_newline = false

[*.{json}]
indent_style = space
indent_size = 2