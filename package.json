  "description": "A development environment for React Applications",
  "main": "index.js",
  "scripts": {
    "lint:all": "npm run lint:react & npm run lint:sass",
    "build": "webpack --mode development",
    "dev:build": "webpack --config ./webpack.dev.js",
    "prod:build": "webpack --config ./webpack.prod.js",
    "start": "node ./tools/server/devServer.js",
    "lint:react": "eslint ./src/index.js",
    "lint:sass": "sass-lint -c .sass-lint.yml ./src/styles/**/*.scss -v -q",
    "lint:server": "esw -w src/tools/server/*.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MrDecipher/React-Dev-Environment.git"
