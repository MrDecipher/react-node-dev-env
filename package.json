    "eslint": "^4.17.0",
    "eslint-watch": "~3.1.0",
    "html-webpack-plugin": "^3.2.0",
    "mini-css-extract-plugin": "^0.4.0",
    "node-sass": "^4.7.2",
    "nodemon": "^1.17.5",
    "postcss-loader": "^2.1.5",
    "sass-lint": "~1.12.1",
    "sass-loader": "^7.0.3",
    "webpack": "^4.12.0",
    "webpack-cli": "^3.0.8",
    "webpack-merge": "^4.1.3"
  }
