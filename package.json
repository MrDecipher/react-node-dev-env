{
  "name": "React-Dev-Environment",
  "version": "1.0.1",
  "description": "A development environment for React Applications",
  "main": "index.js",
  "scripts": {
    "build:css": "npm run lint:sass & npm run compile:sass",
    "build:js": "npm run lint:react & npm run compile:js",
    "compile:sass": "node sassCompiler.js",
    "compile:js": "webpack --mode development",
    "start": "node ./tools/server/devServer.js",
    "lint:react": "eslint src/srcBuild/javascript/app.js",
    "lint:sass": "sass-lint -c .sass-lint.yml src/srcBuild/styles/**/*.scss -v -q",
    "lint:server": "esw -w src/server/*.js",
    "lint:jscompiler": "eslint reactCompiler.js",
    "watch:css": "nodemon -e scss -x \"npm run build:css\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MrDecipher/React-Dev-Environment.git"
  },
  "keywords": [],
  "author": "Japheth Ishola",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/MrDecipher/react-node-dev-env/issues"
  },
  "homepage": "https://github.com/MrDecipher/react-node-dev-env#readme",
  "dependencies": {
    "express": "~4.16.2",
    "react-router-dom": "~4.2.2"
  },
  "devDependencies": {
    "babel-cli": "~6.26.0",
    "babel-loader": "~7.1.0",
    "babel-preset-env": "~1.6.0",
    "babel-preset-es2015": "~6.24.0",
    "babel-preset-react": "~6.24.0",
    "babelify": "^8.0.0",
    "browserify": "^16.1.0",
    "chalk": "^2.3.1",
    "csso": "^3.5.0",
    "eslint": "^4.17.0",
    "eslint-watch": "~3.1.0",
    "node-sass": "~4.7.2",
    "nodemon": "^1.14.12",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "sass-lint": "~1.12.1",
    "webpack": "^4.12.0",
    "webpack-cli": "^3.0.8"
  }
}
