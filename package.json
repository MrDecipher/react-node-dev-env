  },
  "homepage": "https://github.com/MrDecipher/React-Dev-Environment#readme",
  "dependencies": {
    "express": "^4.16.3",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-redux": "^5.0.7",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "redux": "^4.0.0"
  },
  "devDependencies": {
    "autoprefixer": "^8.6.3",
    "babel-cli": "~6.26.0",
