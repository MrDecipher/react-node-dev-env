{
  "name": "React-Dev-Env",
  "version": "1.0.1",
  "description": "A development environment for React Applications",
  "main": "index.js",
  "scripts": {
    "build:css": "npm run lint:sass & npm run compile:sass",
    "build:js": "npm run lint:react & npm run compile:js",
    "compile:sass": "node sassCompiler.js",
    "compile:js": "node reactCompiler.js",
    "prestart": "npm run build:css && npm run build:js",
    "start": "node src/server/devServer.js",
    "lint:react": "eslint src/srcBuild/jvascript/app.js",
    "lint:sass": "sass-lint -c .sass-lint.yml src/srcBuild/styles/**/*.scss -v -q",
    "lint:server": "esw -w src/server/*.js",
    "lint:jscompiler": "eslint reactCompiler.js",
    "watch:css": "nodemon -e scss -x \"npm run build:css\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MrDecipher/react-node-dev-env.git"
  },
  "keywords": [],
  "author": "Japheth Ishola",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/MrDecipher/react-node-dev-env/issues"
  },
  "homepage": "https://github.com/MrDecipher/react-node-dev-env#readme",
  "dependencies": {
    "express": "~4.16.2",
    "react": "~16.1.1",
    "react-dom": "~16.1.1",
    "react-router-dom": "~4.2.2"
  },
  "devDependencies": {
    "babel-cli": "~6.26.0",
    "babel-loader": "~7.1.0",
    "babel-preset-env": "~1.6.0",
    "babel-preset-es2015": "~6.24.0",
    "babel-preset-react": "~6.24.0",
    "babelify": "~7.3.0",
    "browserify": "~14.4.0",
    "chalk": "~2.3.0",
    "eslint": "~4.11.0",
    "eslint-watch": "~3.1.0",
    "node-sass": "~4.7.2",
    "nodemon": "~1.12.1",
    "sass-lint": "~1.12.1"
  }
}
